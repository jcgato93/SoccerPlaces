  </div>

  <div class="field">
    <%= form.label :dateOfReservation %>
    <%= form.date_select :dateOfReservation, id: :reservation_dateOfReservation %>
  </div>

  <div class="field">
    <%= form.label :timeOfReservation %>
    <%= form.time_select :timeOfReservation, id: :reservation_timeOfReservation %>
  </div>

  <div class="field">
    <%= form.label :isActive %>
    <%= form.check_box :isActive, id: :reservation_isActive %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :reservation_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
